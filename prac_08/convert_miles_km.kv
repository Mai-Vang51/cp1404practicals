BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: user_input
            text: ''
            on_text: app.handle_conversion(user_input.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                id: up_button
                text: 'Up'
                on_press: app.handle_increment(user_input.text, 1)
            Button:
                id: down_button
                text: 'Down'
                on_press: app.handle_increment(user_input.text, -1)
#    Button:
#        text: 'Convert miles to km'
#        on_press: app.handle_conversion(user_input.text)
    Label:
        id: output
        color: (1, 1, 0, 1)